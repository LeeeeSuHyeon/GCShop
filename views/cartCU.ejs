<div class="container">	
    <h2>장바구니 내역 입력</h2>
<!-- context로 넘겨준 데이터에 따라 update와 create 분류 -->
	<% if (cart !== null){ %>
		<form action="/purchase/cart_update_process" method="post" >
            <input type = 'hidden' name = 'cart_id' value="<%=cart.cart_id%>">
			<div class="mb-3">
				<label class="form-label" for="id">사용자 아이디</label> 
				<input class="form-control" type="text" name="loginid" value = "<%=cart.loginid%>" style = "width:300px;" />
			</div>
            <div class="mb-3">
				<label class="form-label" for="id">상품 아이디</label> 
				<input class="form-control" type="text" name="mer_id" value = "<%=cart.mer_id%>" style = "width:300px;" />
			</div>
            <div class="mb-3">
				<label class="form-label" for="id">날짜</label> 
				<input class="form-control" type="text" name="date" value = "<%=cart.date%>" style = "width:300px;" />
			</div>
			<button class="btn btn-outline-primary btn-sm" type="submit">입력</button>
	  </form>
	  <% } 
	  else { %> 
		<form action="/purchase/cart_create_process" method="post" >
            <div class="mb-3">
				<label class="form-label" for="id">사용자 아이디</label> 
				<input class="form-control" type="text" name="loginid"  style = "width:300px;" />
			</div>
            <div class="mb-3">
				<label class="form-label" for="id">상품 아이디</label> 
				<input class="form-control" type="text" name="mer_id" style = "width:300px;" />
			</div>
            <div class="mb-3">
				<label class="form-label" for="id">날짜</label> 
				<input class="form-control" type="text" name="date" style = "width:300px;" />
			</div>
			<button class="btn btn-outline-primary btn-sm" type="submit">입력</button>
  </form>
  <% } %>
</div>
